{
  "extends": "@tsconfig/node12",
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./dist"
  ]
}
